<manifest
    package="com.kyletung.androiddailyrecord"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!--Main-->
        <activity android:name=".main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!--Module-->
        <activity android:name=".module.view.ViewsActivity"/>
        <activity android:name=".module.viewgroup.rectlayout.RectLayoutActivity"/>
        <activity android:name=".module.viewgroup.recyclerview.RecyclerActivity"/>

    </application>

</manifest>
